//EDMO-PROGRAMMING
#include <iostream>

using namespace std;

int main ()
{
//declaring variables:
int a, b, count=0;

//Process:
cout<<"\nWe will calculate the sum of integers in the range you provide.";
cout<<"\nPlease give me the lower bound = ";
cin>> a;
cout<<"\nPlease give me the upper bound = ";
cin>>b;

do {
  count=count+a;
  a++;

} while(a<=b);

  cout<<"\nAnd the result is = "<<count;
  return 0;
}
