//EDMO-PROGRAMMING.DISTANCE
#include <iostream>
#include <cmath>
using namespace std;

//Use the function DISTANCE with the pitagoras theorem, returning to d.(DONT FORGET TO USE FLOAT TO GET DECIMAL NUMBERS).
float distance(float x1, float x2, float y1, float y2)
{
    float d;
    d=sqrt ((x2-x1)*(x2-x1)+(y2-y1)*(y2-y1));
    return d;
}

int main ()
{

//Asking for the values.
  float d, x1, x2, y1, y2;
  cout<<"\nThis program may help you to calculate the distance between two points using the Pitagoras theorem. ";
  cout<<"\n Please give me x1 =";
  cin>>x1;
  cout<<"\n Please give me x2 =";
  cin>>x2;
  cout<<"\n Please give me y1 =";
  cin>>y1;
  cout<<"\n Please give me y2 =";
  cin>>y2;

  d=distance (x1, x2, y1, y2);
  cout<<"\n The distance between the two points is = "<<d;

  //To terminate the program.

  return 0;

}
